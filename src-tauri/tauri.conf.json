{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Shelf Serpent Desktop",
  "version": "1.0.0",
  "identifier": "com.shelfsperpent.library",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1421",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Shelf Serpent - Library Management System",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "maximized": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:library.db"]
    },
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "shell": {
      "open": true
    },
    "dialog": null,
    "http": null
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["migrations/*"],
    "externalBin": [],
    "copyright": "Â© 2025 Shelf Serpent Library Management",
    "category": "Productivity",
    "shortDescription": "Professional Library Management System",
    "longDescription": "A high-performance desktop library management system with barcode scanning, offline capabilities, and real-time synchronization."
  }
}
